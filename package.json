{
	"name": "@ethercorps/svelte-h2j",
	"private": false,
	"version": "0.0.8",
	"description": "A library which uses svelte compiler to convert html & css to jsx. Useful for using satori with svelte & Kit",
	"homepage": "https://github.com/etherCorps/svelte-h2j#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/etherCorps/svelte-h2j"
	},
	"bugs": {
		"url": "https://github.com/etherCorps/svelte-h2j/issues"
	},
	"author": [
		{
			"name": "Shivam Meena",
			"email": "shivam@theether.in",
			"url": "https://twitter.com/theether0"
		}
	],
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package -o package && node cpExtraFiles.js && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./package/index.d.ts",
			"svelte": "./package/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"package/**/*.*",
		"!package/**/*.test.*",
		"!package/**/*.spec.*",
		"package.json",
		"LICENSE",
		"README.md",
		"index.d.ts",
		"index.js",
		"toReactElement.d.ts",
		"toReactElement.js",
		"inlineCSS.d.ts",
		"inlineCSS.js"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vitest/ui": "^0.34.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.34.0"
	},
	"svelte": "./package/index.js",
	"types": "./package/index.d.ts",
	"type": "module"
}
